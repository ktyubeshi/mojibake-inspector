{
    "name": "mojibake-inspector",
    "displayName": "Mojibake Inspector",
    "description": "Detect and highlight mojibake (replacement characters) in text files",
    "version": "0.0.16",
    "publisher": "mojibake-inspector",
    "repository": {
        "type": "git",
        "url": "https://github.com/ktyubeshi/mojibake-inspector"
    },
    "engines": {
        "vscode": "^1.48.2"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "l10n": "./l10n",
    "contributes": {
        "commands": [
            {
                "command": "extension.findReplacementCharacters",
                "title": "%extension.findReplacementCharacters.title%"
            }
        ],
        "viewsContainers": {
            "panel": [
                {
                    "id": "mojibake-explorer",
                    "title": "文字化け",
                    "icon": "resources/mojibake.svg"
                }
            ]
        },
        "views": {
            "mojibake-explorer": [
                {
                    "type": "webview",
                    "id": "mojibakeView",
                    "name": "文字化け",
                    "when": "config.mojibakeInspector.showMojibakeView"
                }
            ]
        },
        "configuration": {
            "title": "Mojibake Inspector",
            "properties": {
                "mojibakeInspector.excludePatterns": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "**/.git/**",
                        "**/node_modules/**",
                        "**/.venv/**",
                        "**/venv/**",
                        "**/__pycache__/**",
                        "**/bin/**",
                        "**/obj/**",
                        "**/dist/**",
                        "**/out/**"
                    ],
                    "description": "ワークスペース全体検索から除外するglobパターンの配列"
                },
                "mojibakeInspector.report.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "文字化け検出結果をレポートファイルに出力する"
                },
                "mojibakeInspector.report.outputPath": {
                    "type": "string",
                    "default": "mojibake-report.txt",
                    "description": "レポートファイルの出力先（ワークスペースルートからの相対パス）"
                },
                "mojibakeInspector.showNoResultMessage": {
                    "type": "boolean",
                    "default": false,
                    "description": "文字化けが見つからなかった場合にメッセージを表示する"
                },
                "mojibakeInspector.showMojibakeView": {
                    "type": "boolean",
                    "default": true,
                    "description": "文字化けタブを表示する"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "l10n-build": "@vscode/l10n-dev build"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.48.2",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "@vscode/l10n-dev": "^0.0.35",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "copy-webpack-plugin": "^12.0.2",
        "eslint": "^9.16.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.7.2",
        "webpack": "^5.95.0",
        "webpack-cli": "^5.1.4"
    }
}
